{
    "include": [
        "src/"
    ],
    "compilerOptions": {
        "sourceMap": true,
        "strict": true,
        "module": "commonjs",
        "target": "es6",
        "jsx": "react",
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "strictFunctionTypes": true,
        "alwaysStrict": true,
        "esModuleInterop": true
    }
}
