{
    "moduleFileExtensions": [
        "js",
        "json",
        "ts",
        "tsx"
    ],
    "rootDir": "../src/view",
    "testRegex": ".spec.tsx?$",
    "transform": {
        "^.+\\.tsx?$": ["ts-jest", {
            "tsconfig": "../tsconfig.react.json"
        }]
    },
    "setupFilesAfterEnv": ["<rootDir>/../config/setupTests.js"],
    "coverageDirectory": "../coverage",
    "testEnvironment": "jsdom"
}