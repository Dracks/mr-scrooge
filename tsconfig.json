{
    "include": [
        "src/"
    ],
    "compilerOptions": {
        "types": ["bun-types"],
        "sourceMap": true,
        "strict": true,
        "module": "commonjs",
        "target": "es6",
        "lib": ["es2022"],
        "jsx": "react",
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "strictFunctionTypes": true,
        "emitDecoratorMetadata": true,
        "alwaysStrict": true,
        "esModuleInterop": true,
        "outDir": "build/", 
    }
}
