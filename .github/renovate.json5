{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "npm": {
      "fileMatch": [
          "(^|/)package\\.yaml$"
      ]
  },
  packageRules: [
        {
            "groupName": "all non-major dependencies",
            "groupSlug": "all-minor-patch",
            "matchUpdateTypes": ["minor", "patch", "digest"],
            "matchPackageNames": [
                "*",
            ]
        },
    ]
}

